<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/currencyConverterFragment">

    <fragment
        android:id="@+id/currencyConverterFragment"
        android:name="com.bismark.currency.ui.converter.CurrencyConverterFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_currency_converter">

        <action
            android:id="@+id/action_currencyConverterFragment_to_HistoricalDataFragment"
            app:destination="@id/historicalDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/historicalDataFragment"
        android:name="com.bismark.currency.ui.historicalData.HistoricalDataFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_historical_data">

    </fragment>
</navigation>
